  <body class="dash-body">
    <!-- photo -->
    <!-- <div id="steg-photo"><img src="/assets/photo/t-rex" /></div> -->

    <nav class="">
      <ul class="nav nav-pills justify-content-end">
        <li class="nav-item">
          <a class="nav-link" href="/collector">Collection</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/congrat">Credit Score</a>
        </li>
      </ul>
    </nav>

    <div class="container">
      <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
          <div class="card card-signin flex-row my-5">
            <div class="card-img-left d-none d-md-flex bg-image">
              <!-- Background image for card set in CSS! -->
            </div>
            <div class="card-body">
              <h3 class="login-heading mb-4">
                Hi <span id="login-name"> <%= data.name %></span> !
              </h3>
              <div class="container">
                <div class="row">
                  <div class="col-sm">
                    <form class="form-signin" >
                      <div class="form-label-group">
                        <input
                          type=""
                          id=""
                          class="form-control"
                          placeholder="amount"
                          required
                        />
                        <button
                          class="depositBtn btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2"
                          type="submit" 
                        >
                          $ In!
                        </button>
                      </div>
                    </form>
                  </div>
                  <div class="col-sm">
                    <form class="form-signin">
                      <div class="form-label-group">
                        <input
                          type=""
                          id=""
                          class="form-control"
                          placeholder="amount"
                          required
                        />
                        <button
                          class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2"
                          type="submit"
                        >
                          $ out!
                        </button>
                      </div>
                    </form>
                  </div>
                </div>
                <p>Your current balance: $<%= data.currentBalance %></p>
                <p>Goal: $<%= data.cost %></p>
                <p>Goal Name: <%= data.goal %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="budget-container ">
      <div
        class="time-container card card-signin pb-5 pt-5 px-5 <% if ( parseInt(year) >= parseInt(data.cost)){%>yay<%}else{%> noo <% } %>  "
      >
        <div class="money-container py-5 px-3">
          <p>In a year: $<%= year %></p>

          <p class="yay-msg">
            Congrats! You will save enough for a <%= data.goal %> in a year.
          </p>
          <p class="noo-msg"> 
            Oh no, <%= data.goal %> is too much! You will not have enough in a month from now.
          </p>
        </div>
      </div>


      <div class="time-container card card-signin pb-5 pt-5 px-5 <% if (parseInt(month) >= parseInt(data.cost)){%> yay <%}else{%> noo <% } %>">
        <div class="money-container py-5 px-3">
          <p>In a month: $<%= month %></p>
          <p class="yay-msg"> 
            Congrats! You will save enough for <%= data.goal %> in a month.
          </p>
          <p class="noo-msg">
            Oh no, <%= data.goal %> is too much! You will not have enough in a month from now.
          </p>
        </div>
      </div>

      

     

  <!-- Button trigger modal -->
<!-- <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
Launch demo modal
</button> -->


<!-- Avatar Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">Avatar Unlocked!</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <p>Congratulations! You've unlocked <em>Credit Cactus</em></p>
      <img style="width: 8rem; height: auto; text-align: center;" src="https://images.unsplash.com/photo-1554631221-f9603e6808be?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2317&q=80">
      <p> Credit Score facts or something</p>
      
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      <button type="button" class="btn btn-primary">View Your Collection</button>
    </div>
  </div>
</div>
</div>


<div class="modal fade" id="depositModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Good Job!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>You earned 10 Eggs for putting $10 toward your goal!</p>
        <img style="width: 10rem; height: auto; text-align: center;" src="https://images.unsplash.com/photo-1577975629051-47d899da5640?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80">
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
  </div>
  </div>

  <div class="progress-container">
    <div class="progress">
      <div class="progress-bar progress-bar-striped progress-bar-animate" role="progressbar" style="width: 65%" aria-valuenow="100" aria-valuemin="30" aria-valuemax="70"></div>
    </div> 
</div>
<div class="progress-text-container">
  <p> $0</p>
  <p> You're 3/4 there!</p>
  
</div>


<% if (data.currentBalance >= data.goal) { %>
  <script>$('#exampleModal').modal('show')</script>
<% } %>

<script> 
  $('.depositBtn').click(function() {
    $('#depositModal').modal('show')
  })

</script>

   
  </body>
</html>
