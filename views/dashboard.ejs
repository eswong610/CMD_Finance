<body class="dash-body"> 

    <div class="container">
      <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
          <div class="card card-signin flex-row my-5">
            <div class="card-img-left d-none d-md-flex bg-image">
               <!-- Background image for card set in CSS! -->
            </div>
            <div class="card-body">
              <h3 class="login-heading mb-4">Hi <%= data.name %>!</h3>
              <div class="container">
                <div class="row">
                  <div class="col-sm">
                    <form class="form-signin" >
                      <div class="form-label-group">
                        <input type="" id="" class="form-control" placeholder="amount" required>
                        <button class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2" type="submit">Put In!</button>
                      </div>
                    </form>
                  </div>
                  <div class="col-sm">
                    <form class="form-signin">
                      <div class="form-label-group">
                        <input type="" id="" class="form-control" placeholder="amount" required>
                        <button class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2" type="submit">Take out!</button>
                      </div>
                    </form>
                  </div>
      

                  

                </div>
                <p>Your current balance: $<%= data.currentBalance %></p>
                <p>Goal: $<%= data.cost %></p>
                <p>Goal Name: <%= data.goal %></p>
  
              </div>

          
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="budget-container " >
      <div class="time-container card card-signin pb-5 pt-5 px-5 <% if ( parseInt(year) >= parseInt(data.cost)){%>yay<%}else{%> noo <% } %>  ">
        <div class="money-container py-5 px-3">
          <p>In a year: $<%= year %></p>
          <p class="yay-msg">
            Congrats! You will save enough for a <%= data.goal %> in a year.
          </p>
          <p class="noo-msg"> 
            Oh no, <%= data.goal %> is too much! You will not have enough in a month from now.
          </p>
        </div>
      </div>


      <div class="time-container card card-signin pb-5 pt-5 px-5 <% if (parseInt(month) >= parseInt(data.cost)){%> yay <%}else{%> noo <% } %>">
        <div class="money-container py-5 px-3">
          <p>In a month: $<%= month %></p>
          <p class="yay-msg"> 
            Congrats! You will save enough for <%= data.goal %> in a month.
          </p>
          <p class="noo-msg">
            Oh no, <%= data.goal %> is too much! You will not have enough in a month from now.
          </p>
        </div>
      </div>


  <!-- Button trigger modal -->
<!-- <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
Launch demo modal
</button> -->


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">Avatar Unlocked!</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <p>Congratulations! You've unlocked <em>Credit Cactus</em></p>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      <button type="button" class="btn btn-primary">View Your Collection</button>
    </div>
  </div>
</div>
</div>

<% if (true) { %>
  <script>$('#exampleModal').modal('show')</script>
<% } %>


  </body>




</html>
